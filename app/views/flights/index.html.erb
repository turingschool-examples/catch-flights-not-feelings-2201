<h1>Flights:</h1>

<div class="flight_attributes">
  <% @flights.each do |flight| %>
  <p><b>Flight Number:</b> <%= flight.number %>, Airline: <%= flight.airline.name %></p>
  <p><b>Passengers:</b> <% flight.passengers.each do |passenger| %> <%= link_to "Remove #{passenger.name}", "/flights/#{flight.id}/passengers/#{passenger.id}", method: :delete %></p>
  <p><b>Name:</b> <%= passenger.name %></p>
  <% end %>
  <% end %>
</div>
