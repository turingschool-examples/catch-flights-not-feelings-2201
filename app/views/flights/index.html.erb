<h1>Flights</h1>
<% @flights.each do |flight| %>
<div> <%=flight.number%>>
  <p>Flight: <%= flight.number %> Airline: <%= flight.airline.name %></p>
  <p>Passenger(s): </p>
    <% flight.passengers.each do |passenger| %>
    <p><%= passenger.name %> <%= link_to "Remove #{passenger.name}", "/flights/#{flight.id}/passengers/#{passenger.id}", method: :delete %></p>
  <% end %>
</div>
<% end %>
