<% @flights.each do |flight| %>
  <div id='flight-<%="#{flight.id}"%>'>
    <%= flight.number%>
    <%= flight.airline.name %>
    <% flight.passengers.each do |passenger| %>
    <%=  passenger.name %>
    <% end %>
    <% flight.passengers.each do |passenger| %>
    <%= button_to "Delete #{passenger.name}", "/flights/#{flight.id}/passengers", method: :delete , params: {flight_id: flight.id, passenger_id: passenger.id} %>
    <% end %>
  </div>
  <% end %>
